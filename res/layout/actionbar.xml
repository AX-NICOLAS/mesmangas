<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/TitleBar"
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/actionbar"
	android:layout_width="fill_parent" android:layout_height="45dip"
	android:background="@drawable/backgroundgradient">
	<ImageView style="@style/TitleBarLogo" android:src="@drawable/title_logo"
		android:onClick="backhome" />

	<View style="@style/TitleBarSpring" />

	<ImageView style="@style/TitleBarSeparator" />

	<ImageButton style="@style/TitleBarAction" android:id="@+id/btn_title_refresh"
		android:src="@drawable/ic_title_refresh" android:onClick="onActionBarButtonRefreshClick"
		android:visibility="gone" />
	<ImageView style="@style/TitleBarSeparator" />
	<ImageButton style="@style/TitleBarAction" android:id="@+id/btn_title_back"
		android:src="@drawable/ic_title_back" android:onClick="onActionBarButtonBackClick" />
	<ProgressBar style="@style/TitleBarProgressIndicator"
		android:id="@+id/title_refresh_progress" android:visibility="gone" />

	<ImageView style="@style/TitleBarSeparator" />
	<ImageButton style="@style/TitleBarAction" android:src="@drawable/ic_title_exit_default"
		android:onClick="onActionBarButtonExitClick" />
</LinearLayout>
